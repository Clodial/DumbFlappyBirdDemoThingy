package  {		import flash.display.*;	import flash.ui.Keyboard;	import flash.events.Event;	import flash.events.KeyboardEvent;		public class randomInteractive extends MovieClip {		var vx:int;		var vy:int;				public function randomInteractive() {			vx = 0;			vy = 0;						mover.gotoAndStop(1);			mover.x = stage.stageWidth/2 - mover.width/2;			mover.y = stage.stageHeight/2 - mover.height/2;			init();		}				public function init(){			stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDown);			stage.addEventListener(KeyboardEvent.KEY_UP, keyUp);			stage.addEventListener(Event.ENTER_FRAME, enterFrame);		}				function keyDown(event:KeyboardEvent): void{			if(event.keyCode == Keyboard.UP){				mover.gotoAndStop(1);				vy = -5;			}			if(event.keyCode == Keyboard.RIGHT){				mover.gotoAndStop(2);				vx = 5;			}			if(event.keyCode == Keyboard.DOWN){				mover.gotoAndStop(3);				vy = 5;			}			if(event.keyCode == Keyboard.LEFT){				mover.gotoAndStop(4);				vx = -5;			}		}				function keyUp(event:KeyboardEvent): void{			if(event.keyCode == Keyboard.UP || event.keyCode == Keyboard.DOWN){				vy = 0;			}			if(event.keyCode == Keyboard.RIGHT || event.keyCode == Keyboard.LEFT){				vx = 0;			}		}				function enterFrame(event:Event): void{			mover.x += vx;			mover.y += vy;						if(mover.x < 0 - (mover.width+1)){				mover.x = stage.stageWidth;			}			if(mover.x > stage.stageWidth + mover.width){				mover.x = 0-mover.width;			}			if(mover.y < 0 - (mover.height+1)){				mover.y = stage.stageHeight;			}			if(mover.y > stage.stageHeight + mover.height){				mover.y = 0-mover.height;			}		}			}	}